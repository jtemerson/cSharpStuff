@{
    ViewData["Title"] = "Home Page";
}

<div id="myCarousel" class="carousel slide" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/sacrament.jpg" alt="ASP.NET" class="img-responsive" />
           
            <div class="carousel-caption" role="option">
                <p>
                    Learn More about the Book of Mormon.
                    <a class="btn btn-default" href="https://www.lds.org">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/bookofmormon.jpg" alt="Visual Studio" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    The Book Of Mormon Changes Lives.
                    <a class="btn btn-default" href="https://www.mormon.org">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/christ.jpg" alt="Package Management" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Learn How Jesus Christ can help heal us.
                    <a class="btn btn-default" href="https://www.lds.org">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/missionaries.jpg" alt="Microsoft Azure" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                   Contact the Missionaries for more information.
                    <a class="btn btn-default" href="https://www.mormon.org/missionaries">
                        Learn More
                    </a>
                </p>
            </div>
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row">
    <div class="col-md-3">
        <h2>Planner Uses</h2>
        <ul>
            <li>To organize Sacrament Meetings for memebers and leaders.</li>
            <li>To maintain a record for past meetings.</li>
            <li>To maintain consistancy in Sacrament Meetings world wide.</li>
           
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Check list</h2>
        <ul>
            <li>Choose Members to assign</li>
            <li>Choose Hymns</li>
            <li>Choose Topics</li>
            <li>Special Annoucnments(baby blessings, sustainings, releases, special meetings, etc.)</li>
            <li>List Presiding Leaders</li>
            <li>Thanks and acknowledgements</li>
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Help with your plan</h2>
        <ul>
            <li><a href="https://ident.lds.org/sso/UI/Login?service=credentials">Choose Members for Assigning Prayers, Musicals and Talks.</a></li>
            <li><a href="https://www.lds.org/scriptures/bofm?lang=eng">Choose Scriptures to Talk on.</a></li>
            <li><a href="https://www.lds.org/music?lang=eng">Choose Hymns.</a></li>
           
        </ul>
    </div>
    <div class="col-md-3">
        <h2>Get Started</h2>
        <ul>
            <li><a href="~/SacramentMeetingPlans/Index">Create your meeting plan</a></li>
            
        </ul>
    </div>
</div>
